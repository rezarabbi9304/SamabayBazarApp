<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:elevation="6dp"
        app:cardCornerRadius="5dp"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="46dp"

                android:layout_below="@id/layoutCountButton"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="72dp"
                android:layout_marginRight="72dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/setTotalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="total amount" />


            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="134dp"
                android:layout_height="143dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="285dp"
                android:layout_height="79dp"
                android:layout_toRightOf="@+id/imageView"
                android:gravity="start"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/setProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:gravity="start"
                    android:text="product name" />

                <TextView
                    android:id="@+id/setPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:gravity="start"
                    android:text="price:" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAmount"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:layout_below="@+id/layout1"
                android:layout_marginLeft="-7dp"
                android:layout_marginTop="62dp"
                android:layout_toRightOf="@+id/imageView"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="58dp"
                    android:text="Amount" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCountButton"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="75dp"
                android:layout_toRightOf="@+id/layoutAmount"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:id="@+id/btnAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_add_circle_24" />

                <TextView
                    android:id="@+id/setCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="count" />

                <TextView
                    android:id="@+id/btnMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_remove_circle_24" />


            </LinearLayout>


        </RelativeLayout>






    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>